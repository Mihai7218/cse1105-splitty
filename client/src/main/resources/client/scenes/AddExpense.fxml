        </content>
      </ScrollPane>
      <Button id="addTag" fx:id="addTag" layoutX="65.0" layoutY="460.0" mnemonicParsing="false" onAction="#addTag" text="${controller.languageManager.addExpense.addTag}" />
      <TextField fx:id="newTag" layoutX="43.0" layoutY="510.0" />
      <Label fx:id="instructions" layoutX="43.0" layoutY="548.0" text="${controller.languageManager.addExpense.addTagInstructions}" />
        <Button id="cancel" fx:id="cancelButton" layoutX="303.0" layoutY="508.0" mnemonicParsing="false" onAction="#abort" text="${controller.languageManager.addExpense.abortButton}">
            <font>
                <Font size="19.0" />
            </font>
        </Button>
      <HBox layoutX="173.0" layoutY="472.0" prefHeight="70.0" prefWidth="150.0" />
