<AnchorPane prefHeight="572.0" prefWidth="616.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.scenes.AddExpenseCtrl">
    <children>
        <ChoiceBox fx:id="payee" layoutX="198.0" layoutY="81.0" prefWidth="150.0" />
        <Label fx:id="mainLabel" alignment="TOP_CENTER" layoutY="14.0" prefHeight="41.0" prefWidth="328.0" text="${controller.languageManager.addExpense.mainLabel}" textAlignment="CENTER">
            <font>
                <Font size="27.0" />
            </font>
        </Label>
        <Label fx:id="payeeLabel" layoutX="61.0" layoutY="74.0" prefHeight="42.0" prefWidth="112.0" text="${controller.languageManager.addExpense.payeeLabel}">
            <font>
                <Font size="19.0" />
            </font>
        </Label>
        <Label layoutX="61.0" layoutY="136.0" prefHeight="28.0" prefWidth="90.0" text="${controller.languageManager.addExpense.titleLabel}">
            <font>
                <Font size="19.0" />
            </font>
        </Label>
        <TextField fx:id="title" layoutX="198.0" layoutY="137.0" prefHeight="26.0" prefWidth="221.0" />
        <Label layoutX="61.0" layoutY="184.0" prefHeight="28.0" prefWidth="103.0" text="${controller.languageManager.addExpense.sumLabel}">
