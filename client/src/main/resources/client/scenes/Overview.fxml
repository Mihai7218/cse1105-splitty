                        <Region prefHeight="26.0" prefWidth="5.0" />
                                <Button id="addExpense" fx:id="addExpenseButton" mnemonicParsing="false" onAction="#addExpense" text="${controller.languageManager.overview.addExpenseButton}" />
                            </children>
                        </HBox>
                    </children>
                </VBox>
                <Region prefHeight="0.0" prefWidth="310.0" VBox.vgrow="ALWAYS" />
