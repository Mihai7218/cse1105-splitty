                    <children>
                        <TabPane prefHeight="200.0" prefWidth="396.0" tabClosingPolicy="UNAVAILABLE">
                            <tabs>
                                <Tab text="${controller.languageManager.overview.allTab}">
                                    <content>
                                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                                            <children>
                                                <ListView fx:id="all" layoutX="55.0" layoutY="-64.0" prefHeight="71.0" prefWidth="350.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                                            </children>
                                        </AnchorPane>
                                    </content>
                                </Tab>
                                <Tab fx:id="fromTab">
                                    <content>
                                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                                            <children>
                                                <ListView fx:id="from" layoutX="35.0" layoutY="-75.0" prefHeight="71.2" prefWidth="349.6" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                                            </children>
                                        </AnchorPane>
                                    </content>
                                </Tab>
                                <Tab fx:id="includingTab">
                                    <content>
                                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                                            <children>
                                                <ListView fx:id="including" prefHeight="71.2" prefWidth="349.6" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                                            </children>
                                        </AnchorPane>
                                    </content>
                                </Tab>
                            </tabs>
                        </TabPane>
                    </children>
                </VBox>
                <Region prefHeight="44.0" prefWidth="396.0" />
                <HBox alignment="BOTTOM_RIGHT" prefHeight="74.0" prefWidth="396.0">
                    <children>
                        <Region HBox.hgrow="ALWAYS" />
                        <Button id="cancel" fx:id="cancel" alignment="CENTER" cancelButton="true" layoutX="36.0" layoutY="385.0" mnemonicParsing="false" onAction="#startMenu" text="${controller.languageManager.overview.backButton}" wrapText="true">
                            <HBox.margin>
                                <Insets right="5.0" />
                            </HBox.margin></Button>
                        <Button fx:id="settleDebts" alignment="CENTER" layoutX="256.0" layoutY="385.0" mnemonicParsing="false" onAction="#settleDebts" text="${controller.languageManager.overview.settleDebtsButton}" wrapText="true" />
                    </children>
                </HBox>
            </children>
        </VBox>
        <HBox layoutX="32.0" layoutY="407.0" prefHeight="41.0" prefWidth="201.0">
            <children>
                <Label fx:id="sumLabel" wrapText="true" HBox.hgrow="ALWAYS">
                    <HBox.margin>
                        <Insets right="5.0" />
                    </HBox.margin>
                </Label>
                <Label fx:id="sumExpense" alignment="TOP_LEFT" />
            </children>
        </HBox>
        <HBox alignment="CENTER" layoutY="360.0" prefHeight="57.0" prefWidth="450.0">
         <children>
            <Label id="hciFeedback" fx:id="expenseAdded" alignment="CENTER" contentDisplay="CENTER" textAlignment="CENTER" textFill="WHITE" visible="false" HBox.hgrow="ALWAYS">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
         </children>
      </HBox>
        <LanguageComboBox fx:id="languages" layoutX="370.0" layoutY="22.0" onAction="#changeLanguage" prefWidth="50.0"/>
        <Button id="settings" fx:id="settings" layoutX="325.0" layoutY="25.0" onAction="#settings" />
    </children>
</Pane>
